<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateOmadaFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="ΕΝΗΜΕΡΩΣΗ ΟΜΑΔΑΣ"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/kwdikos_upd_omadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Κωδικός Ομάδας:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/onomaGipedou_upd_omadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginTop="24dp"

        android:hint="Όνομα γηπέδου:"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kwdikos_upd_omadas" />

    <EditText
        android:id="@+id/poli_upd_omadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginTop="24dp"

        android:hint="Πόλη (έδρα):"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onomaGipedou_upd_omadas" />

    <EditText
        android:id="@+id/onomaOmadas_upd_omadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginTop="24dp"

        android:hint="Όνομα Ομάδας:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poli_upd_omadas" />

    <EditText
        android:id="@+id/xwra_upd_omadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Χώρα:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onomaOmadas_upd_omadas" />

    <EditText
        android:id="@+id/kwdikosAthlimatos_upd_omadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="24dp"
        android:hint="Κωδικός Αθλήματος:"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etosIdrisis_upd_omadas" />

    <EditText
        android:id="@+id/etosIdrisis_upd_omadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="24dp"
        android:hint="Έτος ίδρυσης:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xwra_upd_omadas" />

    <Button
        android:id="@+id/updatebt_omadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/mple"
        android:text="UPDATE"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kwdikosAthlimatos_upd_omadas" />


</androidx.constraintlayout.widget.ConstraintLayout>