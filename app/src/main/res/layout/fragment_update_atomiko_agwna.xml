<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/update_agwna_layout"
    tools:context=".UpdateAtomikoAgwna">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="ΕΝΗΜΕΡΩΣΗ ΑΤΟΜΙΚΟΥ ΑΓΩΝΑ"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/kwdikos_update_agwna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:hint="Κωδικός  Αγώνα:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />


    <Button
        android:id="@+id/updatebt_atomikou_agwna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="ΕΠΙΛΟΓΗ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kwdikos_update_agwna" />


    <EditText
        android:id="@+id/hmeromhnia_update_athlitwn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:hint="Ημερομηνία Αγώνα:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updatebt_atomikou_agwna" />

    <EditText
        android:id="@+id/poli_update_agwna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Πόλη Αγώνα:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hmeromhnia_update_athlitwn" />

    <EditText
        android:id="@+id/xwra_update_agwna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:hint="Χώρα Αγώνα:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poli_update_agwna" />


</androidx.constraintlayout.widget.ConstraintLayout>